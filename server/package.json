{
  "scripts": {
    "start": "deno run --allow-net main.ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
